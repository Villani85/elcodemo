<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <description>CRIF P2 - Screen flow to show Account field history for CRIF fields (simplified)</description>
    <label>CRIF - Storico Modifiche</label>
    <interviewLabel>CRIF - Storico Modifiche {!$Flow.CurrentDateTime}</interviewLabel>

    <!-- SCREENS -->
    <screens>
        <name>Screen_History_Info</name>
        <label>Screen History Info</label>
        <locationX>176</locationX>
        <locationY>242</locationY>
        <allowBack>true</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <fields>
            <name>Header_Text</name>
            <fieldText>&lt;p&gt;&lt;b style=&quot;font-size: 14px;&quot;&gt;Storico Modifiche CRIF&lt;/b&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;Per visualizzare lo storico completo delle modifiche ai campi CRIF, vai alla sezione &lt;b&gt;Related&lt;/b&gt; del record Account e cerca &lt;b&gt;Account History&lt;/b&gt;.&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;I seguenti campi sono tracciati:&lt;/p&gt;&lt;ul&gt;&lt;li&gt;CRIF Last Status&lt;/li&gt;&lt;li&gt;CRIF Fatturato&lt;/li&gt;&lt;li&gt;CRIF Factoring Score&lt;/li&gt;&lt;li&gt;CRIF Real Estate Lease Score&lt;/li&gt;&lt;li&gt;CRIF Last Refresh&lt;/li&gt;&lt;/ul&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>true</showHeader>
    </screens>

    <!-- START -->
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Screen_History_Info</targetReference>
        </connector>
    </start>

    <!-- STATUS -->
    <status>Active</status>

    <!-- VARIABLES -->
    <variables>
        <name>recordId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
</Flow>
