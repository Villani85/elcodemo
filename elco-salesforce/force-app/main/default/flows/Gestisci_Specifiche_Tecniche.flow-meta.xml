            <stringValue>Etichettatura</stringValue>
        </value>
    </choices>
    <choices>
        <name>Cat_Documentazione</name>
        <choiceText>Documentazione</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Documentazione</stringValue>
        </value>
    </choices>
    <choices>
        <name>Cat_Qualita</name>
        <choiceText>Qualità &amp; Certificazioni</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Qualità &amp; Certificazioni</stringValue>
        </value>
    </choices>
    <choices>
        <name>Cat_NoteCommerciali</name>
        <choiceText>Note Commerciali / Preferenze</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Note Commerciali / Preferenze</stringValue>
        </value>
    </choices>

    <!-- DECISIONS GROUPED -->
    <decisions>
        <name>Branch_Action</name>
        <label>Branch Action</label>
        <locationX>176</locationX>
        <locationY>350</locationY>
        <defaultConnector>
            <targetReference>Screen_Create_Input</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Create</defaultConnectorLabel>
        <rules>
            <name>Action_List</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Input_Action</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>LIST</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Screen_List</targetReference>
            </connector>
            <label>List</label>
        </rules>
    </decisions>

    <!-- RECORD CREATES GROUPED -->
    <recordCreates>
        <name>Create_TechSpec</name>
        <label>Create TechSpec</label>
        <locationX>176</locationX>
        <locationY>566</locationY>
        <assignRecordIdToReference>newTechSpecId</assignRecordIdToReference>
        <connector>
            <targetReference>Screen_Success</targetReference>
        </connector>
        <inputAssignments>
            <field>Account__c</field>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Category__c</field>
            <value>
                <elementReference>Input_Category</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Value__c</field>
            <value>
                <elementReference>Input_Value</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Notes__c</field>
            <value>
                <elementReference>Input_Notes</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Is_Active__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <object>Account_Tech_Spec__c</object>
    </recordCreates>

    <!-- RECORD LOOKUPS GROUPED -->
    <recordLookups>
        <name>Get_Active_Specs</name>
        <label>Get Active Specs</label>
        <locationX>176</locationX>
        <locationY>242</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Branch_Action</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Account__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <filters>
            <field>Is_Active__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>Account_Tech_Spec__c</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>Name</queriedFields>
        <queriedFields>Category__c</queriedFields>
        <queriedFields>Parameter__c</queriedFields>
        <queriedFields>Value__c</queriedFields>
        <queriedFields>UoM__c</queriedFields>
        <queriedFields>Source__c</queriedFields>
        <sortField>CreatedDate</sortField>
        <sortOrder>Desc</sortOrder>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>

    <!-- SCREENS GROUPED -->
    <screens>
        <name>Screen_Choose_Action</name>
        <label>Cosa vuoi fare?</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <allowBack>true</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <connector>
            <targetReference>Get_Active_Specs</targetReference>
        </connector>
        <fields>
            <name>Display_Header</name>
            <fieldText>&lt;p&gt;&lt;b style=&quot;font-size: 14px;&quot;&gt;Gestione Specifiche Tecniche&lt;/b&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;Seleziona l&apos;operazione da eseguire:&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>Input_Action</name>
            <choiceReferences>Choice_Create</choiceReferences>
            <choiceReferences>Choice_List</choiceReferences>
            <dataType>String</dataType>
            <fieldText>Azione</fieldText>
            <fieldType>RadioButtons</fieldType>
            <isRequired>true</isRequired>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>true</showHeader>
    </screens>

    <screens>
        <name>Screen_List</name>
