        <value>
            <stringValue>LIST</stringValue>
        </value>
    </choices>
    <choices>
        <name>Cat_Materiali</name>
        <choiceText>Materiali</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Materiali</stringValue>
        </value>
    </choices>
    <choices>
        <name>Cat_Dimensioni</name>
        <choiceText>Dimensioni &amp; Tolleranze</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Dimensioni &amp; Tolleranze</stringValue>
        </value>
    </choices>
    <choices>
        <name>Cat_Confezionamento</name>
        <choiceText>Confezionamento / Imballo</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Confezionamento / Imballo</stringValue>
        </value>
    </choices>
    <choices>
