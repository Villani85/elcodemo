        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <connector>
            <targetReference>Create_TechSpec</targetReference>
        </connector>
        <fields>
            <name>Display_Create_Header</name>
            <fieldText>&lt;p&gt;&lt;b style=&quot;font-size: 14px;&quot;&gt;Nuova Specifica Tecnica&lt;/b&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>Input_Category</name>
            <choiceReferences>Cat_Materiali</choiceReferences>
            <choiceReferences>Cat_Dimensioni</choiceReferences>
            <choiceReferences>Cat_Confezionamento</choiceReferences>
            <choiceReferences>Cat_Etichettatura</choiceReferences>
            <choiceReferences>Cat_Documentazione</choiceReferences>
            <choiceReferences>Cat_Qualita</choiceReferences>
            <choiceReferences>Cat_NoteCommerciali</choiceReferences>
            <dataType>String</dataType>
            <fieldText>Categoria</fieldText>
            <fieldType>DropdownBox</fieldType>
            <isRequired>true</isRequired>
        </fields>
        <fields>
            <name>Input_Value</name>
            <dataType>String</dataType>
            <fieldText>Value</fieldText>
            <fieldType>InputField</fieldType>
            <isRequired>true</isRequired>
        </fields>
        <fields>
            <name>Input_Notes</name>
            <fieldText>Notes</fieldText>
