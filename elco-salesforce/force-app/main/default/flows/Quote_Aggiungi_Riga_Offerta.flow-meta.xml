<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <description>Flow for adding QuoteLineItems to a Quote with multi-row loop capability</description>
    <interviewLabel>Quote - Aggiungi Riga Offerta {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Quote - Aggiungi Riga Offerta</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Quote</targetReference>
        </connector>
    </start>
    <status>Active</status>

    <!-- ALL ASSIGNMENTS GROUPED -->
    <assignments>
        <name>Increment_Counter</name>
        <label>Increment Counter</label>
        <locationX>176</locationX>
        <locationY>350</locationY>
        <assignmentItems>
            <assignToReference>lineCounter</assignToReference>
            <operator>Add</operator>
            <value>
                <numberValue>1.0</numberValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Create_QuoteLineItem</targetReference>
        </connector>
    </assignments>

    <assignments>
        <name>Set_Loop_Control</name>
        <label>Set Loop Control</label>
        <locationX>176</locationX>
        <locationY>566</locationY>
        <assignmentItems>
            <assignToReference>addAnother</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Input_Add_Another</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Check_Loop</targetReference>
        </connector>
    </assignments>

    <!-- ALL CHOICES GROUPED -->
    <choices>
