<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR_PCB_02_Spessore_Custom</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Spessore_Complessivo__c, &quot;Custom&quot;),
  ISBLANK(Spessore_Custom_Value__c)
)</errorConditionFormula>
    <errorMessage>Specificare lo spessore custom quando Spessore = &apos;Custom&apos;</errorMessage>
    <errorDisplayField>Spessore_Custom_Value__c</errorDisplayField>
</ValidationRule>
